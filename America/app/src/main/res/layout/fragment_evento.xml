<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content" tools:context="com.ucla.america.Evento"
    android:weightSum="1"
    android:layout_margin="10dp">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal|top">


        <ImageView
            android:shape="oval"
            android:id="@+id/imgEvento"
            android:src="@drawable/img_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.60"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evento Día del Padre"
            android:id="@+id/txtNombreEvento"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="#5fcab0"
            android:textAlignment="center"
            android:textIsSelectable="true"
            android:layout_marginTop="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fecha:"
                android:textStyle="bold"
                android:id="@+id/lblFecha"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Domingo 14 de Junio 2015"
                android:id="@+id/txtFecha"
                android:layout_toEndOf="@+id/lblFecha"
                android:layout_toRightOf="@+id/lblFecha"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Hora:"
                android:textStyle="bold"
                android:id="@+id/lblHora"
                android:layout_below="@+id/lblFecha"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="9:00 am"
                android:id="@+id/txtHora"
                android:layout_below="@+id/txtFecha"
                android:layout_toEndOf="@+id/lblHora"
                android:layout_toRightOf="@+id/lblHora"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Actividades"
                android:id="@+id/textView7"
                android:layout_below="@+id/lblHora"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listaActividadesEvento"
                android:layout_below="@+id/textView7"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Próximamente"
                android:id="@+id/textView"
                android:layout_above="@+id/listaActividadesEvento"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"/>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
