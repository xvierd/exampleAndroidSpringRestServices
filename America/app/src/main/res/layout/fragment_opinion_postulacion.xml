<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" tools:context="com.ucla.america.OpinionPostulacion"
    android:layout_margin="10dp">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/perfil"
                    android:layout_marginLeft="30dp"
                    android:layout_margin="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Romulo Dominguez"
                    android:textSize="18dp"
                    android:layout_marginLeft="14dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:text="PADRINOS"
                    android:gravity="center"
                    android:textSize="22dp"
                    android:textColor="#ff2367ff"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pedro Perez"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juan Gonzalez"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMENTARIO DEL POSTULANTE"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="left"
            android:textIsSelectable="true"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Me identifico con la mision del club ya que mi vision de vida se trata del deporte y la convivencia familiar "
            android:layout_margin="5dp"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OPINA ACERCA DEL POSTULANTE"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="#5fcab0"
            android:textAlignment="center"
            android:textIsSelectable="true"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="3"
            android:inputType="textMultiLine"/>

        <com.getbase.floatingactionbutton.FloatingActionsMenu

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-190dp"
            android:layout_marginStart="185dp"
            android:id="@+id/btnOpinionPostulacion"
            android:src="@drawable/ic_action_home"
            fab:fab_labelStyle="@style/Base.Theme.AppCompat.Light.DarkActionBar"
            fab:fab_labelsPosition="left">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnSugerenciaPublica01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_size="mini"
                fab:fab_title="Enviar"
                android:adjustViewBounds="false"
                />

            <com.getbase.floatingactionbutton.FloatingActionButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_size="mini"
                fab:fab_title="Cancelar"/>
        </com.getbase.floatingactionbutton.FloatingActionsMenu>
    </LinearLayout>
</ScrollView>
</FrameLayout>
