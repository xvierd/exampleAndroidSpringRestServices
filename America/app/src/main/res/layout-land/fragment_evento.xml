<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    tools:context="com.ucla.america.Evento"
   >

    <!-- TODO: Update blank fragment layout -->


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/imgEvento"
                android:src="@drawable/img_evento"

                android:layout_width="250dp"
                android:layout_height="fill_parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evento Día del Padre"
                android:id="@+id/txtNombre"
                android:textSize="@dimen/abc_text_size_display_1_material"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />
        </LinearLayout>



        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Fecha:"
                    android:textStyle="bold"
                    android:id="@+id/lblFecha"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Domingo 14 de Junio 2015"
                    android:id="@+id/txtFecha"

                    android:layout_toEndOf="@+id/lblFecha"
                    android:layout_toRightOf="@+id/lblFecha"
                    android:layout_margin="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Hora:"
                    android:textStyle="bold"
                    android:id="@+id/lblHora"
                    android:layout_below="@+id/lblFecha"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="9:00 am"
                    android:id="@+id/txtHora"
                    android:layout_below="@+id/txtFecha"
                    android:layout_toEndOf="@+id/lblHora"
                    android:layout_toRightOf="@id/lblHora"
                    android:layout_margin="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Actividades"
                    android:id="@+id/textView7"
                    android:layout_below="@+id/lblHora"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:textStyle="bold"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Próximamente"
                    android:id="@+id/textView"
                    android:layout_above="@+id/listaActividadesEvento"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"/>

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/listaActividadesEvento"
                    android:layout_below="@+id/textView7"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    />

            </RelativeLayout>


        </LinearLayout>

</LinearLayout>
